#!/bin/sh
set -e

case "$1" in
  configure)
    # Remove previous registration so we can re-add cleanly (e.g. after upgrade)
    if command -v dkms >/dev/null 2>&1; then
      dkms remove hp-wmi-omen/1.0 --all 2>/dev/null || true
      dkms add hp-wmi-omen/1.0
      dkms autoinstall
    fi
    ;;
esac

exit 0
